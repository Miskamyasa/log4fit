{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    // Checks
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "checkJs": false,

    // Modules
    "resolveJsonModule": true,

    // Build
    "removeComments": true,
    "downlevelIteration": true,

    // Types
    "types": []
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "versionBump.js",
    "withAndroidSupportsScreens.js"
  ]
}
