{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        // Checks
        "strict": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "checkJs": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        // Modules
        "resolveJsonModule": true,
        // Build
        "removeComments": true,
        "downlevelIteration": true,
        // Types
        "types": [
            "node",
            "react",
            "react-native"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "dist",
        "coverage",
        "keys",
        "secrets",
        "node_modules"
    ]
}
